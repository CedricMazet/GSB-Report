{% extends "layout.html.twig" %}
{% set drugMenu = true %}

{% block title %}Praticiens{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if practitioners %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom </th>
                    <th>Prenom </th>
					<th>Ville </th>
					<th>Type </th>
                </tr>
            </thead>
            {% for practitioner in practitioners %}
                <tr>
                    <td><a href="/practitioners/{{ practitioner.id }}">{{ practitioner.name }}</a></td>
                    <td>{{ practitioner.name }}</td>
					<td>{{ practitioner.firstname }}</td>
					<td>{{ practitioner.city }}</td>
					<td>{{ practitioner.practitionertype.name }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun praticiens trouv√©.</div>
{% endif %}   
{% endblock %}